<div id="data">
    <% @questions.each_with_index do |question, counter| puts question.questionTitle%>
        <div class="questionSet" test='<% counter+1 %>'>
            <div class="question">
               <%= question.questionTitle %>
            </div>
            <div class="response">
                <%= question.choice1 %>
            </div>
            <div class="response">
                <%= question.choice2 %>
            </div>
            <div class="response">
                <%= question.choice3 %>
            </div>
            <div class="response">
                <%= question.choice4 %>
            </div>
            <div class="solution">
                <%= question.answer %>
            </div>
        </div>
    <%  end %>
</div>