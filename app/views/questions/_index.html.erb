
<table class="table table-striped">
  <thead>
    <tr>
      <td><%= t(:image) %></td>
      <td><%= t(:questionTitle) %></td>
      <td><%= t(:created_at) %></td>
    </tr>
  </thead>
  <tbody>
    <% @questions.each do |question| %>
      <tr>
        <td><%= image_tag question.image, :class => "img-responsive wp-post-image", :size => '75x75', :alt => question.questionTitle %></td>
        <td><%= link_to question.questionTitle, question_path(question) %></td>
        <td><%= question.created_at %></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_question_path(question), :class => 'btn btn-default btn-xs' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      question_path(question),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-xs btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_question_path,
            :class => 'btn btn-primary' %>
