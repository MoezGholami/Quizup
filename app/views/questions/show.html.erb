<%- model_class = Question -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:image) %>:</strong></dt>
  <dd><%= @question.image %></dd>
  <dt><strong><%= model_class.human_attribute_name(:questionTitle) %>:</strong></dt>
  <dd><%= @question.questionTitle %></dd>
  <dt><strong><%= model_class.human_attribute_name(:answer) %>:</strong></dt>
  <dd><%= @question.answer %></dd>
  <dt><strong><%= model_class.human_attribute_name(:choice1) %>:</strong></dt>
  <dd><%= @question.choice1 %></dd>
  <dt><strong><%= model_class.human_attribute_name(:choice2) %>:</strong></dt>
  <dd><%= @question.choice2 %></dd>
  <dt><strong><%= model_class.human_attribute_name(:choice3) %>:</strong></dt>
  <dd><%= @question.choice3 %></dd>
  <dt><strong><%= model_class.human_attribute_name(:choice4) %>:</strong></dt>
  <dd><%= @question.choice4 %></dd>
</dl>

<%= link_to t('.back', :default => t("helpers.links.back")),
              questions_path, :class => 'btn btn-default'  %>
<%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_question_path(@question), :class => 'btn btn-default' %>
<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              question_path(@question),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
