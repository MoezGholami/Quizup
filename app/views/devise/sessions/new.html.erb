<%= render 'layouts/flash' %>
<div class="courses_box1">
  <div class="container">
    <%= form_for(resource, as: resource_name, url: session_path(resource_name), :html => {:class => 'login'}) do |f| %>
        <div class="panel panel-default">
          <div class="panel-body">
            <%= image_tag("Login-icon.png", :alt => "rss feed") %>
            </br>
            <div class="field">
              <%= f.email_field :email, autofocus: true, :placeholder => t(:email), :class => 'required form-control' %>
            </div>
            <div class="field">
              <%= f.password_field :password, autocomplete: "off", :placeholder => t(:password), :class => 'required form-control' %>
            </div>
            <% if devise_mapping.rememberable? -%>
                <div class="field">
                  <%= f.check_box :remember_me %>
                  <%= f.label t(:remember_me) %>
                </div>
            <% end -%>
            <div class="actions">
              <%= submit_tag t(:login), :class => 'btn btn-primary btn-lg1 btn-block' %>
            </div>

            <%= render "devise/shared/links" %>

    <% end %>
    </div>
    </div>

  </div>
</div>
