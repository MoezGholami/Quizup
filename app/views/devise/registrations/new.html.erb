    <%= render 'layouts/flash' %>
  <div class="courses_box1">
     <div class="container">
        <%= form_for(resource, as: resource_name, url: registration_path(resource_name), :html => {:class => 'login'}) do |f| %>
        <%= devise_error_messages! %>


        <div class="field">
          <%= f.text_field :firs_name, autofocus: true, :placeholder => t(:first_name), :class => 'required form-control' %>
        </div>

        <div class="field">
          <%= f.text_field :last_name, :placeholder => t(:last_name), :class => 'required form-control' %>
        </div>

        <div class="field">
          <%= f.email_field :email, :placeholder => t(:email), :class => 'required form-control' %>
        </div>

        <div class="field">
          <% if @validatable %>
          <em>(<%= @minimum_password_length %> characters minimum)</em>
          <% end %><br />
          <%= f.password_field :password, :placeholder => t(:password), :class => 'required form-control' %>
        </div>

        <div class="field">
          <%= f.password_field :password_confirmation, :placeholder => t(:password_confirm), :class => 'required form-control' %>
        </div>

        <div class="field">
          <%= f.select :sex, options_for_select([['مذکر', 'مذکر'],['مؤنث', 'مؤنث']], params[:sex]), {}, { } %>
        </div>

        <div class="field">
          <%= f.select :sex, options_for_select([['ایران', 'ایران'],['آلمان', 'آلمان'],['عراق', 'عراق'],['آلمان', 'آلمان']], params[:sex]), {}, { } %>
        </div>

        <%= recaptcha_tags %>
        
        <div class="actions">
          <%= submit_tag t(:continue), :class => 'btn btn-primary btn-lg1 btn-block' %>
        </div>
        <%= render "devise/shared/links" %>
      <% end %>

      

     </div>
  </div>

