<%= form_for @category, :html => { :class => "login" } do |f| %>

    <% if @category.errors.any? %>
      <div id="error_expl" class="panel panel-danger">
        <div class="panel-heading">
          <h3 class="panel-title"><%= pluralize(@category.errors.count, "error") %> prohibited this category from being saved:</h3>
        </div>
        <div class="panel-body">
          <ul>
          <% @category.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
          <% end %>
          </ul>
        </div>
      </div>
    <% end %>
    <div class="field">
      <%= f.text_field :name, autofocus: true, :placeholder => t(:name), :class => 'required form-control', :required => 'required' %>
    </div>
    <div class="field">
      <%= f.text_field :image, autofocus: true, :placeholder => t(:image), :class => 'required form-control', :required => 'required' %>
    </div>


  <%= f.submit nil, :class => 'btn btn-primary' %>
  <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
            categories_path, :class => 'btn btn-default' %>

<% end %>
