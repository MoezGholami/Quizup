<%- model_class = Category -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
</dl>
<div class="row text-center">
  <div class="col-md-12">
    <%= form_tag q_in_cat_search_path, :method => :get do %>
    <%= text_field_tag :q_title, params[:q_title] %>
    <%= hidden_field_tag 'id', @category.id %>
    <%= submit_tag t(:question_search), :name => nil %>
    <% end %>
  </div>
</div>
<% @this_category_questions.each do |question| %>
    <div class="row text-center">
      <div class="col-md-6">
        <%= link_to question.id, question_path(question) %>
      </div>
      <div class="col-md-6">
        <%= question.questionTitle %>
      </div>

    </div>
<% end %>
<%= will_paginate @this_category_questions, :previous_label => t(:previous), :next_label => t(:next) %>
<%= link_to t('.back', :default => t("helpers.links.back")),
              categories_path, :class => 'btn btn-default'  %>
<%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_category_path(@category), :class => 'btn btn-default' %>
<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              category_path(@category),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
