<%- model_class = Category -%>
<div class="page-header">
  <h1><%=t '.title', :default => "دسته بندی" %></h1>
</div>

<dl class="dl-horizontal">
</dl>
<dt><strong><%= t(:image) %>:</strong></dt>
<%= image_tag @category.image, :size => '600x300', :alt => "دسته بندی" %>
<dt><strong><%= t(:name) %>:</strong></dt>
<dd><%= @category.name %></dd>
<%= link_to t('.back', :default => t("helpers.links.back")),
              categories_path, :class => 'btn btn-default'  %>
<%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_category_path(@category), :class => 'btn btn-default' %>
<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              category_path(@category),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
